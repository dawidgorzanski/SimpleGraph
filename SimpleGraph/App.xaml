<Application x:Class="SimpleGraph.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:SimpleGraph"
             StartupUri="GUI/MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Theme/MetroLight/Metro.MSControls.Core.Implicit.xaml" />
                <ResourceDictionary Source="Theme/MetroLight/Metro.MSControls.Toolkit.Implicit.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <SolidColorBrush x:Key="ColorPoints" Color="Red"/>
            <SolidColorBrush x:Key="ColorCircle" Color="Green"/>
            <SolidColorBrush x:Key="ColorLines" Color="Black"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
